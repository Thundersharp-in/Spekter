<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#181920"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".ui.activities.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">


        <LinearLayout
            android:id="@+id/welcome_Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/logo"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/ic_launcher_background" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome Back!"
                android:fontFamily="@font/calibrib"
                android:textColor="#f4f5fc"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:textSize="19sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please sign in to your spectre account."
                android:layout_marginTop="10dp"
                android:fontFamily="@font/calibri"
                android:textColor="#434349" />


        </LinearLayout>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:background="@drawable/edittext_curved"
            android:elevation="7dp"
            android:minHeight="60dp"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/editText_carrierNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:hint="Acharya Email"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:layout_marginHorizontal="25dp"
                android:fontFamily="@font/calibri"
                android:singleLine="true"
                android:textColor="#BAB9B9"
                android:textColorHint="#474b53" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:background="@drawable/edittext_curved"
            android:elevation="7dp"
            android:layout_marginTop="10dp"
            android:minHeight="60dp"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/editText_password"
                android:layout_toStartOf="@id/password_toggle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:hint="Password"
                android:layout_centerInParent="true"
                android:inputType="textPassword"
                android:maxLines="1"
                android:layout_marginStart="25dp"
                android:singleLine="true"
                android:textColor="#BAB9B9"
                android:textColorHint="#474b53" />

            <ImageView
                android:id="@+id/password_toggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_outline_remove_red_eye_24"
                app:tint="#474b53"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"/>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot password ?"
            android:textColor="#54565A"
            android:layout_gravity="end"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="15dp"
            android:elevation="7dp"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginHorizontal="15dp"
                android:background="@drawable/button_login_blue"
                android:textAllCaps="false"
                android:text="Sign in"
                android:elevation="7dp"
                android:textColor="#fff"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginHorizontal="15dp"
                android:background="@drawable/button_login_blue"
                android:backgroundTint="#E1E1E1"
                android:textAllCaps="false"
                android:elevation="7dp"
                android:text="Register"
                android:textColor="#2E2C2C"
                android:layout_marginTop="10dp"/>


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:elevation="7dp"
            android:fontFamily="@font/calibri"
            android:text="By continuing you are agreeing and accepting Thundersharp's data privacy policy."
            android:textAlignment="center"
            android:textColor="#474b53" />


    </RelativeLayout>

</LinearLayout>