<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context=".ui.activities.exhibition.ProjectsInfo">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_marginVertical="6dp"
            android:layout_marginStart="10dp"
            android:layout_toStartOf="@+id/share"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/rrr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="5dp"
                android:src="@drawable/ic_baseline_arrow_back_24"
                app:tint="#fff" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/calibrib"
                    android:text="Welcome to,"
                    android:textColor="#AEAEAE"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-3dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/roboto_medium"
                    android:maxLines="1"
                    android:text="Project Name"
                    android:textColor="#D8D8D8"
                    android:textSize="18sp" />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/share"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15sp"
            android:background="@drawable/ffade_white_circle"
            android:elevation="5dp"
            android:padding="7dp"
            android:src="@drawable/ic_outline_share_24"
            app:tint="#fff" />


    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/project_type"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:src="@drawable/iot" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/project_type"
                android:layout_centerHorizontal="true"
                android:layout_gravity="start"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="2dp"
                android:fontFamily="@font/roboto_medium"
                android:maxLines="1"
                android:text="Project's name"
                android:textColor="#E1E1E1"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/role"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/calibri"
                android:layout_below="@id/name"
                android:layout_centerHorizontal="true"
                android:maxLines="1"
                android:textColor="#B6B6B6"
                android:layout_marginEnd="10dp"
                android:textSize="16sp"
                android:layout_gravity="start"
                android:text="IOT" />

            <TextView
                android:id="@+id/eventName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/role"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/calibri"
                android:text="Techfest is the annual science and technology festival of Acharya institute of graduate studies, bengaluru. It also refers to the independent body of students who organize this event along with many other social initiatives and outreach programs round the year. Techfest is known for hosting a variety of events that include competitions, exhibitions, lectures as well as workshops.Started in 1998 with the aim of providing a platform for the Indian student community to develop and showcase their technical prowess, it has now grown into Asia\'s Largest Science and Technology Festival with a footfall of 1.65 lakhs in its latest edition."
                android:textAlignment="center"
                android:textColor="#C8C8C8"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/part_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/eventName"
                android:layout_centerHorizontal="true"
                android:layout_gravity="start"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="2dp"
                android:fontFamily="@font/roboto_medium"
                android:maxLines="1"
                android:text="Participant`s list"
                android:textColor="#E1E1E1"
                android:textSize="16sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/students_holder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/part_head"
                android:layout_marginTop="15dp"
                android:minHeight="170dp"
                android:nestedScrollingEnabled="false"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

            <TextView
                android:id="@+id/scan_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/students_holder"
                android:layout_centerHorizontal="true"
                android:layout_gravity="start"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="2dp"
                android:fontFamily="@font/roboto_medium"
                android:maxLines="1"
                android:text="Scan stall QR Code for"
                android:textColor="#E1E1E1"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/scan_head"
                android:layout_marginBottom="85dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/scan_benifits"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/role"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="15dp"
                    android:fontFamily="@font/calibri"
                    android:text="At the event for each project stalls there will be QR Codes can then to know further about this project.\n\n1.How to make this project\n2. Parts required\n3. Participants contact and details\n4. Project's gallery\n5. Donate to participants."
                    android:textAlignment="viewStart"
                    android:textColor="#C8C8C8"
                    android:textSize="16sp" />

            </LinearLayout>


        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/book"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/curved"
        android:backgroundTint="#A11545"
        android:text="Scan stall QR for more"
        android:textColor="#fff"
        android:fontFamily="@font/calibrib"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="15dp"/>


</RelativeLayout>