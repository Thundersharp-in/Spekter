<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:layout_gravity="bottom"
    android:background="#000">

    <TextView
        android:id="@+id/top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:fontFamily="@font/calibrib"
        android:maxLines="1"
        android:text="Beti bachao beti padhao"
        android:textColor="#EAEAEA"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/top"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="15dp"
        android:weightSum="3">
        <LinearLayout
            android:id="@+id/pledge"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/info"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@drawable/circle_green"
                android:elevation="5dp"
                android:padding="10dp"
                android:src="@drawable/ic_outline_cruelty_free_24"
                app:tint="#fff" />

            <TextView
                android:id="@+id/pledgeT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/calibri"
                android:text="Pledge"
                android:textAllCaps="false"
                android:textColor="#DDDDDD"
                android:textSize="15sp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/readMore"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/participants"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@drawable/circle"
                android:backgroundTint="#E91E1E"
                android:elevation="5dp"
                android:padding="10dp"
                android:src="@drawable/ic_outline_join_right_24"
                app:tint="#fff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/calibri"
                android:text="Read in depth"
                android:textAllCaps="false"
                android:textColor="#DDDDDD"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/share"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/camp"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@drawable/circle"
                android:backgroundTint="#00BCD4"
                android:elevation="5dp"
                android:padding="10dp"
                android:src="@drawable/ic_outline_campaign_24"
                app:tint="#fff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/calibri"
                android:text="Tell the world !"
                android:textAllCaps="false"
                android:textColor="#DDDDDD"
                android:textSize="15sp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>