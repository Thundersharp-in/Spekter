<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?android:attr/selectableItemBackground"
    android:layout_marginVertical="7dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/test_gradient">

        <androidx.cardview.widget.CardView
            android:id="@+id/ohold"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#fff">
            <ImageView
                android:id="@+id/profile_pic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/sa"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/started_by"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/ohold"
            android:ellipsize="end"
            android:fontFamily="@font/calibri"
            android:maxLines="1"
            android:text="Initiative started by AIGS"
            android:textAlignment="viewStart"
            android:textColor="#9E9E9E"
            android:textSize="13sp"
            tools:ignore="RtlCompat" />


        <ImageView
            android:id="@+id/pinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_outline_info_24"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:elevation="4dp"
            android:layout_marginTop="15dp"
            app:tint="#FFFFFF" />


        <ImageView
            android:layout_width="160dp"
            android:layout_height="110dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="-12dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/creative"
            app:tint="#5A5A5A" />




        <LinearLayout
            android:id="@+id/line1hold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/ohold"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="12dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="10dp"
            android:orientation="vertical">



            <TextView
                android:id="@+id/started_on"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/calibri"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="Started on 21st jul 2020"
                android:gravity="start"
                android:textColor="#9E9E9E"
                android:textAlignment="viewStart"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tittle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/calibri"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="Beti Bachao Beti Padhao"
                android:textAlignment="viewStart"
                android:textColor="#FFFFFF"
                android:textSize="22sp" />

        </LinearLayout>



    </RelativeLayout>


</androidx.cardview.widget.CardView>