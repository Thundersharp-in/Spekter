<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:layout_gravity="bottom"
    android:background="#000">

    <TextView
        android:id="@+id/top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/calibrib"
        android:text="Register a Complaint/Feedback"
        android:textColor="#EAEAEA"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/top"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="15dp"
        android:weightSum="3">
        <LinearLayout
            android:id="@+id/facFeedback"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/info"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@drawable/circle_green"
                android:elevation="5dp"
                android:padding="10dp"
                android:src="@drawable/ic_outline_person_24"
                app:tint="#fff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/calibri"
                android:text="Faculty Feedback"
                android:textAllCaps="false"
                android:textColor="#DDDDDD"
                android:textSize="15sp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/event_feedBack"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/participants"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@drawable/circle"
                android:elevation="5dp"
                android:padding="10dp"
                android:src="@drawable/ic_baseline_attractions_24"
                app:tint="#fff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/calibri"
                android:text="Event Feedback"
                android:textAllCaps="false"
                android:textColor="#DDDDDD"
                android:textSize="15sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/app_feed_Back"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/scanner"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@drawable/ffade_white_circle"
                android:elevation="5dp"
                android:padding="10dp"
                android:src="@drawable/ic_baseline_developer_board_24"
                app:tint="#fff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/calibri"
                android:text="App Feedback"
                android:textAllCaps="false"
                android:textColor="#DDDDDD"
                android:textSize="15sp" />


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>