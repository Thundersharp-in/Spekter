<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="150dp"
    android:background="#000">

    <TextView
        android:id="@+id/top_tittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:ellipsize="end"
        android:fontFamily="@font/roboto_medium"
        android:maxLines="1"
        android:text="Troubleshooting and Recovery"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />


    <TextView
        android:id="@+id/profile_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_tittle"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="10dp"
        android:ellipsize="end"
        android:fontFamily="@font/calibri"
        android:text="Troubleshooting and recovery toolkit contains tools which helps to troubleshoot and recover the application in case the application is not working as expected, you can choose among the options to troubleshoot and recover."
        android:textAlignment="center"
        android:textColor="#D8D8D8"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_description"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/invCache"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/profile_background_white"
            android:fontFamily="@font/calibri"
            android:text="Invalidate cache" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/invCacheRestart"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:backgroundTint="#E91E63"
            android:textColor="#fff"
            android:background="@drawable/profile_background_white"
            android:fontFamily="@font/calibri"
            android:text="Invalidate cache and restart" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="15dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="5dp"
            android:weightSum="2">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/resetFirebase"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="45dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="#fff"
                android:backgroundTint="#009688"
                android:background="@drawable/profile_background_white"
                android:fontFamily="@font/calibri"
                android:text="Reset Firebase conf" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/clearLocal"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:background="@drawable/profile_background_white"
                android:fontFamily="@font/calibri"
                android:text="Clear Local data" />

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>