<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:minHeight="65dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    app:cardElevation="7dp"
    app:cardCornerRadius="20dp"
    app:cardBackgroundColor="#2d2d39">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="5dp"
            android:layout_marginVertical="7dp"
            android:layout_toStartOf="@id/lastsecond"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:fontFamily="@font/calibrib"
                android:maxLines="1"
                android:textColor="#ECECEC"
                android:text="Project's name"
                android:gravity="center_vertical"
                android:drawablePadding="10dp"/>
            <TextView
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:fontFamily="@font/calibri"
                android:textColor="#C5C3C3"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="A very short and sweet that description about the project nedds to be updated here"
                android:gravity="center_vertical" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/last"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@drawable/curved_client_item"
            android:minHeight="65dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:padding="1dp"
                android:src="@drawable/ic_outline_qr_code_scanner_24" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lastsecond"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/last"
            android:background="@drawable/curved_client_two"
            android:minHeight="65dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_outline_offline_bolt_24"
                app:tint="#fff" />


        </RelativeLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>