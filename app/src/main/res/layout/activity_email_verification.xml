<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#181920"
    tools:context=".ui.activities.auth.EmailVerificationActivity">

    <ImageView
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/ic_baseline_power_settings_new_24"
        app:tint="#fff" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animationView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:lottie_rawRes="@raw/emailverification"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email verification"
            android:textColor="#fff"
            android:fontFamily="@font/calibrib"
            android:textSize="20sp"
            android:layout_marginTop="-15dp"
            android:layout_gravity="center_horizontal"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hi,welcome to spekter you are just a step away from the platform! Verify your acharya email id by clicking on the link we have sent you.\n\nPlease check the Spam folder if the verification message is not received."
            android:textColor="#92959A"
            android:layout_marginHorizontal="35dp"
            android:textAlignment="center"
            android:fontFamily="@font/calibri"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="35dp"
            android:textSize="17sp"
           />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/getStarted"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginHorizontal="15dp"
            android:background="@drawable/button_login_blue"
            android:textAllCaps="false"
            android:text="Resend Verification Link"
            android:textSize="17sp"
            android:elevation="7dp"
            android:textColor="#fff"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/refresh"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="15dp"
            android:background="@drawable/button_login_blue"
            android:textAllCaps="false"
            android:backgroundTint="#fff"
            android:text="Refresh"
            android:textSize="17sp"
            android:elevation="7dp"
            android:textColor="#000000"/>



    </LinearLayout>


</RelativeLayout>