<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/view_source"
        android:orientation="vertical"
        android:weightSum="5">

        <FrameLayout
            android:id="@+id/imagek"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/button_curved_round"
                android:paddingVertical="5dp"
                android:paddingHorizontal="10dp"
                android:elevation="5dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/share_news"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="5dp"
                    android:paddingVertical="5dp"
                    app:tint="#fff"
                    android:paddingHorizontal="5dp"
                    android:src="@drawable/ic_outline_share_24"/>

                <ImageView
                    android:id="@+id/update_frequency"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:tint="#fff"
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="5dp"
                    android:src="@drawable/ic_outline_timelapse_24"
                    android:layout_marginStart="10dp"/>

            </LinearLayout>

            <ProgressBar
                android:id="@+id/loader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="10dp"
                android:text="5 hour ago"
                android:textColor="#fff"
                android:textSize="13sp" />


        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:background="#000"
            android:elevation="2dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/roboto"
                    android:text="TITLE"
                    android:textColor="#D8D8D8"
                    android:textSize="21sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvSource"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvTitle"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="0dp"
                    android:fontFamily="@font/calibri"
                    android:paddingEnd="5dp"
                    android:text="Source : "
                    android:textColor="#6E6C6C" />

                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/tvSource"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/roboto"
                    android:text="Description"
                    android:textColor="#B1B1B1"
                    android:textColorHint="#fff"
                    android:textSize="20sp" />


            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>



    <LinearLayout
        android:id="@+id/view_source"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="#3F51B5"
        android:elevation="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/viewArt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:layout_marginTop="0dp"
            android:fontFamily="@font/roboto"
            android:text="View complete article"
            android:textAllCaps="true"
            android:textColor="#E8E8E8"
            android:textSize="14sp" />


        <ImageView
            android:id="@+id/skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="9dp"
            android:src="@drawable/ic_outline_source_24"
            app:tint="#E8E8E8" />

    </LinearLayout>


</RelativeLayout>